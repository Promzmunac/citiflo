<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".navfragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingStart="10dp"
            android:paddingBottom="30dp"
            android:background="@color/md_green_900"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile_photo"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello, David"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are your plans for today?"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="5dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/notify"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="10dp"
                android:translationX="-7dp"
                android:translationY="16dp"
                android:src="@drawable/ellipse_1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">




            <Spinner
                android:id="@+id/spinnerDropDown"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="5dp"/>

            <EditText
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="I am trying to find..."
                android:background="@drawable/bg_green_empty"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:drawableEnd="@drawable/search"
                android:textColor="@color/md_grey_300"
                android:paddingEnd="15dp"
                android:paddingStart="10dp"
                android:padding="5dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find your choice of Logistics or Register your vehicle for hire"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/md_grey_500"
                android:textAlignment="center"
                android:padding="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="fill_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/HomeBg"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bikeImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/bike" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:translationY="-30dp"
                            android:text="Bike"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/HomeBg"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/busImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/bus" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:translationY="-30dp"
                            android:text="Bus"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/HomeBg"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/vanImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/van" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:translationY="-30dp"
                            android:text="Van"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/HomeBg"
                        android:orientation="vertical">
                        <ImageView
